  .visualizationExport.hidden
    h1 Export Visualization
    ul
      li: a(href="#").png Download as PNG
      li: a(href="#").svg Download as SVG
      li: a(href="#").html Download as HTML
      li: a(href="#").dismiss X Dismiss

  .selectDataset.hidden
    h1 Select Dataset
    ul
      li Current dataset: #[span.current-dataset]
      li Datasets
        ul
          li: a(href="#").evens Evens
          li: a(href="#").odds Odds
          li: a(href="#").primes Primes
      li: a(href="#").dismiss Dismiss

  .selectVisualization.hidden
    h1 Select Visualization
    ul
      li Current visualization: #[span.current-visualization]
      li Visualizations
        ul
          li: a(href="#").scatterplot Scatter Plot
          li: a(href="#").barchart Bar Chart
      li: a(href="#").dismiss Dismiss

  .openProject.hidden
    h1 Open Project
    ul
      li Current project: #[span.current-project]
      li Projects
        ul
          li: a(href="#").mkultra MK-Ultra
          li: a(href="#").runway Runway
